{
  "name": "test-js-ts",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:debug": "node --experimental-vm-modules node_modules/jest/bin/jest.js -i --watchAll",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js -i --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "test:ci": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage --watchAll=false --ci",
    "test:changed": "node --experimental-vm-modules node_modules/jest/bin/jest.js --onlyChanged",
    "test:related": "node --experimental-vm-modules node_modules/jest/bin/jest.js --findRelatedTests",
    "update:deps": "yarn upgrade-interactive",
    "update:patches": "yarn patch-commit",
    "lint": "eslint . --cache --max-warnings=0",
    "lint:fix": "eslint . --fix --cache",
    "lint:report": "eslint . --format=json --output-file=lint-report.json",
    "format": "prettier -w .",
    "format:check": "prettier -c .",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "clean": "rm -rf coverage dist .eslintcache",
    "clean:deps": "rm -rf node_modules yarn.lock && yarn install",
    "prepare": "husky",
    "pre-commit": "lint-staged",
    "postinstall": "husky install"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css,md,json,yml,yaml}": [
      "prettier -w",
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^29.5.0",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-junit": "^16.0.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3"
  },
  "packageManager": "yarn@4.0.2"
}
