{
  "include": [
    "src/**/*",
    "tests/**/*"
  ],
  "compilerOptions": {
    "lib": [
      "esnext"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "isolatedModules": true
  },
  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}